<h2 class="capitalize">@ViewBag.ProjectName</h2>
<div class="pure-g">
    <div class="pure-u-1 pure-u-lg-1-3">
        <div class="panel">
            <h2 class="panel-header">Most Recent</h2>
            <a href="#">Most Recent File</a>
        </div>
    </div>
    <div class="pure-u-1 pure-u-lg-1-3">
        <div class="panel">
            <h2 class="panel-header">Search Documents</h2>
            <form action="@Url.Action("Search", "Home")" method="get" class="pure-form">
                <input type="hidden" value="@ViewBag.ProjectName" id="containerName" name="containerName" />
                <label id="search" class="sr-only">Search</label>
                <input type="text" id="search" name="search" placeholder="Search" />
                <button type="submit" class="pure-button pure-button-primary">
                    <i class="fa fa-search" aria-hidden="true"></i> Search
                </button>
            </form>
        </div>
    </div>
    <div class="pure-u-1 pure-u-lg-1-3">
        <div class="panel">
            <h2 class="panel-header">Upload File</h2>
            <form action="@Url.Action("Upload","Home")" enctype="multipart/form-data" method="post" class="pure-form pure-form-stacked">
                <input type="hidden" value="@ViewBag.ProjectName" id="containerName" name="containerName"/>
                <input type="file" name="file" id="file" class="inputfile" required>
                <label for="file">
                    <i class="fa fa-file"></i>
                    <span class="file-text">Choose File</span>
                </label>
                <label for="tags" class="sr-only">Tags</label>
                <input type="text" id="tags" name="tags" placeholder="Tags (tag1, tag2, etc.)" required/>
                <button class="pure-button pure-button-primary" type="submit">
                    <span class="fa fa-cloud-upload"></span> Upload
                </button>
            </form>
        </div>
    </div>
</div>

