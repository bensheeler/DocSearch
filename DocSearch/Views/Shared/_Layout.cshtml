<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>DocSearch</title>
    <link rel="stylesheet" href="https://unpkg.com/purecss@0.6.1/build/pure-min.css">
    <link rel="stylesheet" href="https://unpkg.com/purecss@0.6.1/build/grids-responsive-min.css">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div id="layout">
        <!-- Menu toggle -->
        <a href="#menu" id="menuLink" class="menu-link">
            <!-- Hamburger icon -->
            <span></span>
        </a>
        <div id="menu">
            <div class="pure-menu">
                <a class="pure-menu-heading" href="/">Doc Search</a>
                <ul class="pure-menu-list">
                    <li class="pure-menu-item"><a href="/docs" class="pure-menu-link">Docs</a></li>
                    <li class="pure-menu-item"><a href="/fdot" class="pure-menu-link">Fdot</a></li>
                    <li class="pure-menu-item"><a href="/nexus" class="pure-menu-link">Nexus</a></li>
                </ul>
            </div>
        </div>
        <div id="main">
            <div class="header">
                <h1>Doc Search</h1>
                <h2>Upload your files to the cloud and access them anywhere</h2>
            </div>
            <div class="content">
                @RenderBody()
            </div>
        </div>
    </div>


    @*<script src="Scripts/ui.js"></script>*@
    <script src="https://use.fontawesome.com/a0528ea01a.js"></script>
    <script>
        var inputs = document.querySelectorAll('.inputfile');
        Array.prototype.forEach.call(inputs, function (input) {
            var label = input.nextElementSibling,
                labelVal = label.innerHTML;

            input.addEventListener('change', function (e) {
                var fileName = '';
                fileName = e.target.value.split('\\').pop();

                if (fileName)
                    label.querySelector('.file-text').innerHTML = fileName;
                else
                    label.innerHTML = labelVal;
            });
        });
    </script>
</body>
</html>
